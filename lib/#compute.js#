
module.exports ={

    DLI(json, callback){

	var data = json;
	var DLI = []
	var _DLI = data[0].GHI;

    for (i=1;i<data.length;i++){

	if (i==data.length-1){
		   
	    DLI.push(data[i]);
	    _DLI = 0;
	} else if(data[i].Month === data[i-1].Month && data[i].Day === data[i-1].Day){

	_DLI+=data[i].GHI;

	} else {

//	DLI.push(JSON.parse(`{"Month":${data[i].Month},"Day365":${data[i-1].Day365},"DLI":${_DLI}}`));

	    data[i].DLI = `${_DLI}`;
	    _DLI = 0;
	}
    }
	console.log(data);
    callback(data);
}
};
