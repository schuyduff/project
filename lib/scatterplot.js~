var $ = require("jquery");
var d3 = require("d3");
var computeDLI = require("./computeDLI.js");
var dateTo365 = require("./dateTo365.js");

module.exports = function scatterplot(json){

    var margin = {top: 100, right: 20, bottom: 30, left: 50},
	width = 960 - margin.left - margin.right,
	height = 500 - margin.top - margin.bottom;

   
    // define the line
    var valueline = d3.line()
        .x(function(d) { return x(d.Day); })
        .y(function(d) { return y(d.DLI); });

    // append the svg obgect to the body of the page
    // appends a 'group' element to 'svg'
    // moves the 'group' element to the top left margin
    var svg = d3.select("body").append("svg")
        .attr("width", width + margin.left + margin.right)
        .attr("height", height + margin.top + margin.bottom)
	.append("g")
        .attr("transform",
	      "translate(" + margin.left + "," + margin.top + ")");

//load data
    d3.json(json).get(function(error,_json){

	var input = _json;
//format data into json
	var data =[];
	var DLI_only = [];
	for(i=5;i<input.length;i+=2){

	    data.push(JSON.parse(input[i]));
	    
	}

	dateTo365(data,function(_data){
	    data = _data;

	    	computeDLI(data,function(_DLI){
		    DLI_only=_DLI;
		    console.log(DLI_only);
		});

	});

	// format the data
	DLI_only.forEach(function(d) {
	    d.Day = +d.Day;
	    d.DLI = +d.DLI;
	    
	});

	//scale the ranges
	var x = d3.scaleLinear().range([0, width]);
	var y = d3.scaleLinear().range([height, 0]);

	// Scale the range of the data
	x.domain([0, d3.max(DLI_only, function(d) { return d.Day; })]);
	y.domain([0, d3.max(DLI_only, function(d) { return d.DLI; })]);

	
	// Add the scatterplot
	svg.selectAll("dot")
	    .data(DLI_only)
	    .enter().append("circle")
	    .attr("r", 5)
	    .attr("cx", function(d) { return x(d.Day); })
	    .attr("cy", function(d) { return y(d.DLI); });



	// Add the X Axis
	svg.append("g")
	    .attr("transform", "translate(0," + height + ")")
	    .call(d3.axisBottom(x));

	// Add the Y Axis
	svg.append("g")
	    .call(d3.axisLeft(y));
	
    });

};
